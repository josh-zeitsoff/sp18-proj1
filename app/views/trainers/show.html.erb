<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemon:  <% @pokemon.each do |p| %>
			
			<p> <% if p.ndex %>
    			<%= image_tag("pokemon/#{p.ndex}.png", alt: "pokemon") %>
  			<% end %>
			<b> Name: </b> <%= p.name %>  
			<b> Level: </b> <%= p.level %>  
			<b> Health: </b><%= p.health %>
			<%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %>
			</p>
			<% end %>
</p>		

<% if @trainer.id == current_trainer.id %> 
	<%= button_to "Create Pokemon", pokemons_new_path, :method => "get" %>
<% end %>